function toggleMagnifier() {
    if (document.getElementById("web-developer-page-magnifier-container").hidden)
        WebDeveloper.PageMagnifier.createPageMagnifier();
    else
        WebDeveloper.PageMagnifier.removePageMagnifier();
}

EOF

