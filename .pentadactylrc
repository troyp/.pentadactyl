map -modes text-edit,operator -b <C-a> ^
map -modes text-edit,operator -b <C-e> $
map -modes text-edit,operator -b <A-=> <C-a>
map -modes text-edit,operator -b <A--> <C-x>


" -----------------------------------------------------------------------------
" ,----------------------------,
" | Pass-through mode bindings |
" '----------------------------'

