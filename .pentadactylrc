" -----------------------------------------------------------------------------
" ,---------------------------------------,  MAP COMMANDS.
" | Command mode and insert mode bindings |  cmap: command-line mode
" '---------------------------------------'  imap: insert mode

js <<EOF
function getCmdline() { return CommandExMode().command; }
function copyCmdlineOrJS() {
    var cmd = getCmdline();
    var cmdOrJS = cmd.replace(/^ec(ho)? +|^js +|^javas(cript)? +/, '');
    utils.cbWrite(cmdOrJS);
}
EOF


