var toggleRomaji = function() {
    var url = buffer.URL;
    var romtag = "%23romaji";
    if (url.contains(romtag))
        newurl = url.replace(romtag,"");
    else
        newurl = `${url}%23romaji`;
    dactyl.open(newurl)
}

